{
  "name": "tailwind-parcel-starter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Thongchai Lim",
  "license": "MIT",
  "scripts": {
    "serve": "parcel index.html",
    "build:css": "set NODE_ENV=production&&postcss tailwind.css -o static/dist/tailwind.css",
    "watch": "watch 'npm run build:css' ./src",
    "build": "parcel build index.html --out-dir prod  --no-cache --no-source-maps",
    "dev": "set NODE_ENV=dev&&parcel build index.html --no-minify  --no-cache"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "parcel-plugin-purgecss": "^2.1.2",
    "tailwindcss": "^1.0.2",
    "tailwindcss-card": "^0.1.0"
  },
  "dependencies": {
    "autoprefixer": "^9.5.1",
    "cssnano": "^4.1.10",
    "parcel-bundler": "^1.10.3",
    "postcss": "^7.0.16",
    "postcss-modules": "^1.4.1",
    "purgecss": "^1.3.0",
    "tailwind": "^4.0.0",
    "tailwindcss-border-gradients": "^2.0.0",
    "tailwindcss-tables": "^0.2.0",
    "tailwindcss-transforms": "^2.1.0",
    "tailwindcss-transition": "^1.0.5",
    "tailwindcss-transitions": "^2.0.1",
    "watch": "^1.0.2"
  }
}
